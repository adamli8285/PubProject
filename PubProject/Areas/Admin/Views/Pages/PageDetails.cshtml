@model PubProject.Models.ViewModels.Pages.PageVM

@{
    ViewBag.Title = "Page Details";
}

<h2 style="color:darkgoldenrod;text-shadow:1px 1px 1px black">Page Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal" style="color:darkgoldenrod;text-shadow:1px 1px 1px black;font-size:16px">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Slug)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Slug)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Body)
        </dt>

        <dd>
            @Html.Raw(Model.Body)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "EditPage", new { id = Model.Id }) |
